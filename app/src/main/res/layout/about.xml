<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/layout_about_1"
    android:orientation="vertical"
    android:weightSum="1"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".10"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:padding="2dp"
        android:layout_margin="2dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:text="ABOUT"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="25sp"
            android:padding="5dp"
            android:textColor="#e3e3e3"
            android:fontFamily="sans-serif"
            tools:ignore="HardcodedText,RtlHardcoded" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".30"
        android:layout_marginTop="3dp"
        android:background="@drawable/entrance"
        android:layout_margin="2dp"
        android:padding="5dp"
        >

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".48"
        android:layout_marginTop="3dp"
        android:layout_margin="2dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Farm Radio Trust is an indigenous, non-profit, local non-governmental organization promoting innovative Radio and ICT based farmer advisory and extension services in Malawi."
            android:textAllCaps="false"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:fontFamily="serif"
            android:textStyle="italic"
            android:textColor="#000000"
            android:padding="2dp"
            tools:ignore="HardcodedText,RtlHardcoded" />

    </LinearLayout>

</LinearLayout>
