<!-- Layout for order summary -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SummaryFragment">

    <data>
        <variable
            name="viewModel"
            type="com.adz.mlimivisual.fragments.DataViewModel" />

        <variable
            name="summaryFragment"
            type="com.adz.mlimivisual.fragments.SummaryFragment" />


            <variable
                name="aptModel"
                type="com.adz.mlimivisual.models.AppointmentModel" />


    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/side_margin">

            <!-- Group the order details into a single ViewGroup and set focusable = true,
                 so all fields will be read aloud together by the accessibility service -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="125dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="50dp"
                    android:contentDescription="todo"
                    android:src="@drawable/mlimi_logo" />

                <TextView
                    android:id="@+id/flavor_label"
                    android:layout_marginStart="25dp"
                    style="@style/Widget.Cupcake.TextView.Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/flavor" />

                <TextView
                    android:id="@+id/flavor"
                    android:layout_marginStart="25dp"
                    style="@style/Widget.Cupcake.TextView.OrderSummary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/order_summary_margin"
                    android:text="@{viewModel.flavor}"
                    tools:text="Chocolate" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="28sp"
                android:layout_marginTop="15sp"
                android:layout_marginBottom="10sp"
                android:text="Please provide a description of the situation."
                android:textSize="16sp"
                android:textStyle="bold" />


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="description"
                android:textColorHint="#9E9999"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_margin="5dp"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold|normal"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:ems="10"

                    android:maxLines="1"
                    android:inputType="textPersonName"
                    android:layout_marginStart="20sp"
                    android:layout_marginTop="6sp"
                    android:layout_marginEnd="20sp"
                    android:layout_marginBottom="6sp"
                    />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginStart="28sp"
                    android:layout_marginTop="15sp"
                    android:layout_marginBottom="10sp"
                    android:text="Please provide us with your location."
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="location"
                    android:textColorHint="#9E9999"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_margin="5dp"

                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold|normal"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:ems="10"
                        android:maxLines="1"
                        android:inputType="textPersonName"
                        android:layout_marginStart="20sp"
                        android:layout_marginTop="6sp"
                        android:layout_marginEnd="20sp"
                        android:layout_marginBottom="6sp"
                        />

                </com.google.android.material.textfield.TextInputLayout>



            </LinearLayout>


            <Button
                android:id="@+id/send_button"
                android:text="Send"
                android:textSize="16sp"
                android:onClick="@{() -> summaryFragment.sendOrder()}"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:layout_margin="5dp"
                app:shapeAppearanceOverlay="@style/Button8"
                app:backgroundTint="#0C9F12"
                android:elevation="15dp"
                android:gravity="center"
                android:padding="10dp"
                android:textStyle="bold|normal"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>
</layout>